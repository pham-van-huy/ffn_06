<% provide(:title, @new.title) %>
<div class="row">
  <div class="col-lg-12">
    <h1><%= @new.title %></h1>
    <p><%= @new.created_at.time.strftime(Settings.datetime) %></p>
    <hr>
      <p class="new-content"><%= @new.content %></p>
    <hr>

    <% if logged_in? %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= t ".comment" %></div>
        <div class="panel-body">
          <div class="form-group">
            <textarea class="form-control" rows="3" id="content_comment"></textarea>
          </div>
          <button type="submit" class="btn btn-primary style-button" id="submit_comment"><%= t ".submit" %></button>
        </div>
      </div>
    <% else %>
      <h3><%= t ".comments" %></h3>
    <% end %>
    <hr>
    <div id="container_comment">
      <% @comments.each do |comment| %>
        <div class="row comment-user">
          <div class="col-lg-1 style-avatar">
            <a href="#">
              <img class="img-responsive user-photo" src="/assets/<%= comment.user.avatar %>">
            </a>
          </div>
          <div class="col-lg-11 name_author" data-id="<%= comment.id %>">
            <h4 class="media-heading"><%= comment.user.name %>
              <% if comment.user_id == current_user.id %>
                <span ><i class="fa fa-trash" aria-hidden="true"></i></span>
                <span><i class="fa fa-pencil"  aria-hidden="true"></i></span>
              <% end %>
            </h4>
            <p class="content_comment"><%= comment.content %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="digg_pagination">
      <%= will_paginate @comments, container: false %>
    </div>
  </div>
</div>
<%= content_for :javascript do %>
  <script type="text/javascript">
    <%= render "comment.js" %>
  </script>
<% end %>

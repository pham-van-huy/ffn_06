<% provide(:title, t(".title")) %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="main-box clearfix">
        <div class="table-responsive">
          <div class="panel panel-default">
            <div class="panel-heading panel-heading-leagues">
              <%= t ".list_leagues" %>
              <a href="<%= new_admin_league_path %>"><i class="fa fa-plus-circle" aria-hidden="true"></i> </a>
            </div>
            <div class="panel-body">
              <table class="table user-list leagues-list">
                <thead>
                  <tr>
                    <th><span><%= t ".name_league" %></span></th>
                    <th><span><%= t ".created" %></span></th>
                    <th class="text-center"><span><%= t ".start_at" %></span></th>
                    <th><span><%= t ".matched" %></span></th>
                    <th>&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @leagues %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if @leagues.present? %>
    <section class="bottom-border"></section>
    <div class="digg_pagination">
      <%= will_paginate @leagues, container: false %>
    </div>
  <% end %>
</div>

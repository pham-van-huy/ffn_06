<aside id="ccr-right-section" class="col-md-4 ccr-home">
  <section id="social-buttons">
    <ul>
      <li>
        <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
        <p><span class="bubble"></span><span class="count">202</span> Like</p>
      </li>
      <li>
        <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
        <p><span class="bubble"></span><span class="count">202</span> Like</p>
      </li>
      <li>
        <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
        <p><span class="bubble"></span><span class="count">202</span> Follow</p>
      </li>
      <li>
        <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
        <p><span class="bubble"></span><span class="count">202</span> Like</p>
      </li>
    </ul>

  </section>

  <section id="sidebar-popular-post">
    <div class="ccr-gallery-ttile">
      <span></span>
      <p><strong><%= t "layouts.sibar_right.name_table" %></strong></p>
    </div>
    <div>
      <ul id="ranking_table">
        <% @teams_ranked.each_with_index do |team, index| %>
          <li>
            <img src="/assets/<%= team.logo %>" alt="Avatar">
            <%= link_to team.name, "javascript:void(0)"%>
            <div class="date-like-comment">
              <span class="date">
                <i class="fa fa-sort-amount-desc" aria-hidden="true"></i>
                <%= index + 1 %>
              </span>
              <a class="like" href="javascript:void(0)">
                <i class="fa fa-futbol-o" aria-hidden="true"></i>
                <%= team.score %>
              </a>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </section>

  <section id="sidebar-older-post">
    <div class="ccr-gallery-ttile">
      <span></span>
      <p><strong><%= t ".latest_new" %></strong></p>
    </div>
    <ul>
      <% @latest_news.each do |e| %>
        <li>
          <img src="/assets/<%= e.represent_image %>">
          <%= link_to e.title, news_path(e) %>
          <div class="date-like-comment">
            <span class="date"><time class="time-sibar">
              <%= I18n.l e.created_at, format: :date_month_year %>
            </time></span>
            <a class="comments" href="javascript:void(0)">
              <i class="fa fa-comments-o"></i><%= e.comments.size %>
            </a>
          </div>
        </li>
      <% end %>
    </ul>

  </section>
  <section id="ccr-sidebar-newslater">

    <div class="ccr-gallery-ttile">
      <span></span>
      <p><label for="sb-newslater"><strong>Newslater</strong></label></p>
    </div>
    <div class="sidebar-newslater-form">
      <form class="ccr-gallery-ttile" action="#">
        <input type="email" id="sb-newslater" name="sb-newslater" placeholder="Enter your email address" required>
        <button type="submit">Subscribe</button>

      </form>
    </div>
  </section>

  <section id="ccr-find-on-fb">
    <div class="find-fb-title">
      <span><i class="fa fa-facebook"></i></span> Find us on Facebook
    </div>
    <div class="find-on-fb-body">

      <div class="fb-like-box" data-href="https://www.facebook.com/codexcoderltd/" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false">
      </div>
    </div>
  </section>
</aside>

<!doctype html>
<html lang="en">
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render "layouts/load_css" %>
  </head>

  <body>
  <div id="fb-root"></div>
  <%= javascript_include_tag "jsfb", "data-turbo-link": "reload" %>
  <%= render "layouts/header" %>
    <section id="ccr-main-section">
      <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <section id="ccr-left-section" class="col-md-8">
          <%= yield %>
        </section>
        <%= render "layouts/sibar_right"%>
      </div>
    </section>
  <%= render "layouts/load_js"%>
  <%= content_for :javascript %>
  </body>
</html>

<% provide(:title, t(".title")) %>
<% @teams.each do |e| %>
  <article class="wrap-list-team">
    <div class="container">
      <a href="javascript:void(0)">
        <div class="col-sm-6 col-md-4 logo-team">
          <figure>
            <img src="/assets/<%= e.logo %>">
          </figure>
        </div>
      </a>
      <div class="col-sm-6 col-md-8 info-team">
        <a href="javascript:void(0)">
          <h4><%= e.name %></h4>
          <p><%= e.description[0..200]%>...</p>
        </a>
        <hr>
        <section>
          <span>
            <i class="fa fa-hourglass-start" aria-hidden="true"></i>
            <%= I18n.l e.created_at, format: :date_month_year %>
          </span>
          <span>
            <i class="fa fa-bolt" aria-hidden="true"></i>
            <%= e.matchs_one.size + e.matchs_two.size %>
          </span>
          <span>
            <a href="javascript:void(0)">
              <i class="fa fa-users" aria-hidden="true"></i>
              <%= e.players.size %>
            </a>
          </span>
          <button class="btn btn-default btn-sm pull-right" data-toggle="modal" data-target="#myModal-<%= e.id %>"><%= t ".more" %></button>
        </section>
      </div>
    </div>
  </article>
  <div id="myModal-<%= e.id %>" class="modal fade custom-modal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <div id="main-<%= e.id %>">
            <div class="row">
              <div class="col-lg-12">
                <h2 class="page-header">
                  <%= e.name %>
                </h2>
              </div>
            </div>
            <div class="row" id="real-estates-detail-<%= e.id %>">
              <div class="col-lg-4 col-md-4 col-xs-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <header class="panel-title">
                      <div class="text-center">
                        <strong><%= t ".logo_team" %></strong>
                      </div>
                    </header>
                  </div>
                  <div class="panel-body">
                    <div class="text-center" id="author-<%= e.id %>">
                      <img src="/assets/<%= e.logo %>">
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-8 col-md-8 col-xs-12">
                <div class="panel">
                  <div class="panel-body">
                    <ul id="myTab-<%= e.id %>" class="nav nav-pills">
                      <li class="active"><a href="#detail-<%= e.id %>" data-toggle="tab"><%= t ".details" %></a></li>
                      <li class=""><a href="#contact-<%= e.id %>" data-toggle="tab"><%= t ".description" %></a></li>
                    </ul>
                    <div id="myTabContent-<%= e.id %>" class="tab-content">
                      <div class="tab-pane fade active in" id="detail-<%= e.id %>">
                        <br>
                        <table class="table table-th-block">
                          <tbody>
                            <tr>
                              <td class="active"><%= t ".number_member" %></td>
                              <td><%= e.players.size %></td>
                            </tr>
                            <tr>
                              <td class="active"><%= t ".number_match" %></td>
                              <td><%= e.matchs_one.size + e.matchs_two.size %></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                      <div class="tab-pane fade" id="contact-<%= e.id %>">
                        <%= e.description %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if @teams.present? %>
  <section class="bottom-border"></section>
  <div class="digg_pagination">
    <%= will_paginate @teams, container: false %>
  </div>
<% end %>

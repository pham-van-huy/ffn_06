<div class="container col-xs-12">
  <div class="content">
    <div class="table-responsive">
      <table class="table user-list">
        <thead>
          <tr>
            <th><%= match.teams_col_one.name %></th>
            <th><%= match.teams_col_two.name %></th>
            <th><%= t ".coin" %></th>
          </tr>
        </thead>
        <tbody class="show-list-bet">
          <% match.bets.bet_by_match(current_user.id).each do |e| %>
            <tr>
              <td><i class="fa fa-futbol-o" aria-hidden="true"></i>
                <span class="bet_goal_1" data-goal-1="<%= e.team1_goal %>"><%= e.team1_goal %></span>
              </td>
              <td><i class="fa fa-futbol-o" aria-hidden="true"></i>
                <span class="bet_goal_2" data-goal-2="<%= e.team2_goal %>"><%= e.team2_goal %></span>
              </td>
              <td><i class="fa fa-usd" aria-hidden="true"></i>
                <span class="bet_coin" data-coin="<%= e.coin %>"><%= e.coin %></span>
              </td>
              <% if valid_bet? match %>
                <td>
                  <span
                    class="edit_bet btn-success"
                    data-bet-id="<%= e.id %>"
                    data-coin-user="<%= current_user.coin %>">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                  </span>
                  <span class="delete_bet btn-danger" data-bet-id="<%= e.id %>">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </span>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if valid_bet? match %>
      <div class="search-box">
        <div class="row margin_row">
          <div class="col-xs-12">
            <div class="col-xs-4">
              <label><%= match.teams_col_one.name %></label>
              <br />
              <input name="goal1" type="number" class="form-control width_select habitaciones">
            </div>
            <div class="col-xs-4">
              <label><%= match.teams_col_two.name %></label>
              <br />
              <input name="goal2" type="number" class="form-control width_select">
            </div>
            <div class="col-xs-4">
              <label><%= t ".bet" %></label>
              <br />
              <input name="coin" type="number" class="form-control width_select">
            </div>
          </div>
        </div>
        <div class="row button-search">
          <button
            class="btn btn-primary btn-md btn_search block-right submit-bet"
            data-coin="<%=current_user.coin%>"
            data-match-id="<%= @match.id %>">
            <%= t ".bet" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

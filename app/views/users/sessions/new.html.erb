<% provide(:title, t(".title")) %>
<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form"} do |f| %>
        <legend><%= t ".title" %></legend>
        <%= f.email_field :email, class: "form-control input-lg", placeholder: t(".your_email") %>
        <%= f.password_field :password, class: "form-control input-lg", placeholder: t(".password") %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <%= f.submit t(".button"), class: "btn btn-lg btn-primary btn-block signup-btn" %>
        <fb:login-button
          scope="public_profile,email"
          onlogin="checkLoginState('<%= login_facebook_path %>', '<%= form_authenticity_token %>');">
        </fb:login-button>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag "loginsocial", "data-turbo-link": "reload" %>

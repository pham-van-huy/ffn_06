<% provide(:title, t(".title")) %>
<div class="container">
  <div class="row content-profile">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1 toppad">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t ".title" %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <%= form_for @user, url: user_path, html: {class: "form"} do |f| %>
              <%= render "shared/error_messages", object: f.object %>
              <div class="col-md-3 col-lg-3 " align="center">
                <div class="input-group image-preview">
                  <input type="hidden" class="form-control image-preview-filename" disabled="disabled">
                  <span class="input-group-btn">
                  <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                    <%= t ".clear" %>
                  </button>
                  <div class="btn btn-default image-preview-input">
                    <span class="image-preview-input-title"><%= t(".browse") %></span>
                    <%= f.file_field :avatar, accept: "image/png, image/jpeg" %>
                  </div>
                  </span>
                </div>
                <img id="old-avatar" src="<%= @current_user.avatar %>">
                <img id="new_img" src="">
              </div>
              <div class=" col-md-9 col-lg-9 ">
                <table class="table table-user-information">
                  <tbody>
                    <tr>
                      <td><%= t ".name" %></td>
                      <td><%= f.text_field :name, class: "form-control", value: current_user.name %></td>
                    </tr>
                    <tr>
                      <td><%= t ".email" %></td>
                      <td><%= f.email_field :email, class: "form-control", value: current_user.email %></td>
                    </tr>
                  </tbody>
                </table>
                <button class="btn btn-primary"><%= t ".save" %></button>
                <%= link_to t(".cancel"), root_path, class: "btn btn-danger"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
